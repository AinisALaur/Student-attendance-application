                                 <children>
                                    <VBox alignment="CENTER" prefHeight="79.0" prefWidth="154.0">
                                       <children>
                                          <TextField fx:id="importFilePath" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
                                          <Hyperlink onAction="#browseImport" text="Browse" />
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="139.0" prefWidth="300.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#importData" text="Import">
                           <VBox.margin>
                              <Insets bottom="40.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#goBackToMain" text="Back">
