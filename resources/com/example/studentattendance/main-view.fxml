<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentattendance.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="University's student list">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <TableView fx:id="studentsList" fixedCellSize="50.5" prefHeight="265.0" prefWidth="660.0" style="-fx-font-size: 14px; -fx-alignment: CENTER;">
        <columns>
          <TableColumn fx:id="studIdCol" prefWidth="95.0" text="Student ID" />
          <TableColumn fx:id="studNameCol" prefWidth="246.40001678466797" text="Student" />
            <TableColumn fx:id="studGroupCol" prefWidth="144.79998779296875" text="Group" />
            <TableColumn fx:id="dateCol" prefWidth="188.00009155273438" text="Date" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Label text="Filter data">
         <font>
            <Font size="23.0" />
         </font>
      </Label>
      <VBox prefHeight="167.0" prefWidth="660.0">
         <children>
            <HBox minWidth="350.0" prefHeight="100.0" prefWidth="350.0">
               <children>
                  <VBox alignment="CENTER" minWidth="330.0" prefHeight="350.0" prefWidth="100.0">
                     <children>
                        <Label text="Filter by">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" minWidth="330.0" prefHeight="330.0" prefWidth="100.0">
                     <children>
                        <ChoiceBox fx:id="filterList" onAction="#updateFilter" prefWidth="150.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox maxHeight="55.0" minHeight="55.0" prefHeight="55.0" prefWidth="700.0">
               <children>
                  <HBox minWidth="350.0" prefHeight="100.0" prefWidth="350.0">
                     <children>
                        <VBox alignment="CENTER" minWidth="330.0" prefHeight="350.0" prefWidth="100.0">
                           <children>
                              <Label text="Starting date">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" minWidth="330.0" prefHeight="330.0" prefWidth="100.0">
                           <children>
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <DatePicker fx:id="startDate" onAction="#activateFilter">
                                       <HBox.margin>
                                          <Insets right="20.0" />
                                       </HBox.margin>
                                    </DatePicker>
                                    <Button mnemonicParsing="false" onAction="#clearStartDate" text="Clear" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox maxHeight="55.0" minHeight="55.0" prefHeight="55.0" prefWidth="700.0">
               <children>
                  <HBox minWidth="350.0" prefHeight="100.0" prefWidth="350.0">
                     <children>
                        <VBox alignment="CENTER" minWidth="330.0" prefHeight="350.0" prefWidth="100.0">
                           <children>
                              <Label text="Ending date">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" minWidth="330.0" prefHeight="330.0" prefWidth="100.0">
                           <children>
                              <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <DatePicker fx:id="endDate" onAction="#activateFilter">
                                       <HBox.margin>
                                          <Insets right="20.0" />
                                       </HBox.margin>
                                    </DatePicker>
                                    <Button mnemonicParsing="false" onAction="#clearEndDate" text="Clear" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox maxHeight="55.0" minHeight="55.0" prefHeight="55.0" prefWidth="700.0">
               <children>
                  <HBox minWidth="350.0" prefHeight="100.0" prefWidth="350.0">
                     <children>
                        <VBox alignment="CENTER" minWidth="330.0" prefHeight="350.0" prefWidth="100.0">
                           <children>
                              <Label fx:id="chooseText" text="Choose ...">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" minWidth="330.0" prefHeight="330.0" prefWidth="100.0">
                           <children>
                              <ChoiceBox fx:id="filterByList" onAction="#activateFilter" prefWidth="150.0" />
                           </children>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
      <HBox prefHeight="45.0" prefWidth="660.0">
         <children>
            <HBox alignment="CENTER" prefHeight="45.0" prefWidth="350.0">
               <children>
                  <Button fx:id="newStudentBtn" mnemonicParsing="false" onAction="#onManageStudentClick" text="Manage students" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="350.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onManageGroupClick" text="Manage groups" />
               </children>
            </HBox>
         </children>
      </HBox>
      <HBox prefHeight="87.0" prefWidth="660.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="700.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onManageDataClick" text="Manage data" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
